#:kivy 2.0.0
#: import StringProperty kivy.properties.StringProperty
MyScreenManager:
    HomeScreen:
    MenuScreen:
    CheckoutScreen:
    AccountScreen:

<Button>:
    background_normal: ''
    background_down: ''
    background_color: '#fbb448'
    color: '#cc3d0b'
    canvas.before:
        Color:
            rgba: 243/255, 103/255, 13/255, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<Label>:
    color: '#cc3d0b'

<ImageButton@ButtonBehavior+Image>:
    allow_stretch: True
    keep_ratio: True

<HeaderButton@Button>:
    size_hint_x: 1
    font_size: 18

<Header@BoxLayout>:
    canvas.before:
        Color:
            rgba: 243/255, 103/255, 13/255, 1
        Line:
            width: 1
            points: (self.x, self.y, self.x+self.width, self.y)
    orientation: 'horizontal'
    size_hint_y: 1
    Label:
        size_hint_x: 2.5
        text_size: self.size
        text: "John's Pizzeria"
        font_size: 30
        halign: 'left'
    Label:
        size_hint_x: 4
    HeaderButton:
        text: 'Cart'
    HeaderButton:
        text: 'Login'
    HeaderButton:
        text: 'Signup'

<ModeSelection@BoxLayout>:
    orientation: 'vertical'
    mode: ''
    source: None
    Button:
        size_hint_y: 1
        text: root.mode
        font_size: 18
        on_release: app.root.home_to_menu(root.mode)
    ImageButton:
        size_hint_y: 5
        allow_stretch: True
        keep_ratio: True
        source: root.source
        on_release: app.root.home_to_menu(root.mode)

<HomeScreen>:
    name: 'homescreen'
    BoxLayout:
        orientation: 'vertical'
        Header:
        Image:
            size_hint_y: 5
            allow_stretch: True
            keep_ratio: False
            source: 'assets/home_1_croped.png'
        Label:
            text: 'Start ordering by chooosing one of the following'
            font_size: 18
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 6
            ModeSelection:
                mode: 'Delivery'
                source: 'assets/Delivery.png'
            ModeSelection:
                mode: 'Pickup'
                source: 'assets/Pickup.png'

<ItemText@Label>:
    size_hint_x: 1
    font_size: 16

<ItemImage@Image>:
    size_hint_x: 5
    allow_stretch: True
    keep_ratio: True

<MenuWidget@BoxLayout>:
    orientation: 'vertical'
    itemname: ''
    itemsource: None
    Label:
        size_hint_y: 1
        font_size: 16
        text: root.itemname
    Image:
        size_hint_y: 5
        allow_stretch: True
        keep_ratio: True
        source: root.itemsource
    TextInput:
        id: root.itemname
        size_hint_y: 0.8
        font_size: 14
        input_filter: 'int'
        on_text: app.root.add_item(root.itemname, self.text)
