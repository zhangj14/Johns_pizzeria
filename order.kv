<MenuScreen>:
    name: 'menuscreen'
    BoxLayout:
        orientation: 'vertical'
        Header:
        GridLayout:
            size_hint_y: 10
            cols: 3
            MenuWidget:
                itemname: 'Pepperoni'
                itemsource: 'assets/pepperoni.png'
            MenuWidget:
                itemname: 'Cheesy Garlic'
                itemsource: 'assets/cheesygarlic.png'
            MenuWidget:
                itemname: 'Mushroom'
                itemsource: 'assets/mushroom.png'
            MenuWidget:
                itemname: 'Beef and Tomato'
                itemsource: 'assets/beeftomato.png'
            MenuWidget:
                itemname: 'Supreme'
                itemsource: 'assets/supreme.png'
            MenuWidget:
                itemname: 'Vegetarian'
                itemsource: 'assets/vegetarian.png'
        Button:
            size_hint_y: 1
            text: '>>>Go to checkout>>>'
            on_release: app.root.menu_to_checkout()

<InfoBox@BoxLayout>:
    orientation: 'vertical'
    prompt: ''
    do_text: None
    ItemText:
        text: root.prompt
    TextInput:
        font_size: 14
        on_text: root.do_text

<CheckoutScreen>:
    name: 'checkoutscreen'
    order_info: order_info
    BoxLayout:
        orientation: 'vertical'
        Header:
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 11
            BoxLayout:
                orientation: 'vertical'
                InfoBox:
                    prompt: 'Please enter your name:'
                InfoBox:
                    prompt: 'Please enter your phone number:'
                InfoBox:
                    prompt: 'Please enter your address (if delivery):'
                InfoBox:
                    prompt: 'Anything else we need to know:'
            BoxLayout:
                orientation: 'vertical'
                id: order_info

