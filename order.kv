<MenuScreen>:
    name: 'menuscreen'
    # Vegetarian: 'Vegetarian'
    # Pepperoni: Pepperoni
    # Cheesy_garlic: Cheesy Garlic
    BoxLayout:
        orientation: 'vertical'
        Header:
        GridLayout:
            size_hint_y: 11
            cols: 3
            MenuWidget:
                itemname: 'Pepperoni'
                itemsource: 'assets/pepperoni.png'
            MenuWidget:
                itemname: 'Cheesy Garlic'
                itemsource: 'assets/cheesygarlic.png'
            MenuWidget:
                itemname: 'Mushroom'
                itemsource: 'assets/mushroom.png'
            MenuWidget:
                itemname: 'Beef and Tomato'
                itemsource: 'assets/beeftomato.png'
            MenuWidget:
                itemname: 'Supreme'
                itemsource: 'assets/supreme.png'
            MenuWidget:
                itemname: 'Vegetarian'
                itemsource: 'assets/vegetarian.png'
        Button:
            text: '>>>Go to checkout>>>'
            on_release: app.root.menu_to_checkout()

